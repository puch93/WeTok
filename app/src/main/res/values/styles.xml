<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_28a7e1</item>
        <item name="colorAccent">@color/color_28a7e1</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="colorControlHighlight">@color/color_aaaaaa</item>
    </style>

    <!-- dialog open/close animation -->
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/open</item>
        <item name="android:windowExitAnimation">@anim/close</item>
    </style>

    <!-- toolbar button size -->
    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:width">32dp</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ToolbarThemeSearch" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- other toolbar button size -->
    <style name="ActionOtherButton" parent="@android:style/Widget.ActionButton">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:width">20dp</item>
    </style>
    <style name="ToolbarOtherTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="actionButtonStyle">@style/ActionButton</item>
    </style>

    <!-- edit text style -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
<!--        <item name="android:textCursorDrawable">@color/color_white</item>-->
        <item name="colorAccent">@color/color_white</item>
    </style>

    <!-- spinner style -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/color_aaaaaa</item>
        <item name="android:dividerHeight">0.05dp</item>
    </style>

    <!-- dialog activity style -->
    <style name="ActivityDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- code dialog style -->
    <style name="CodeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="Theme.Slidr.Slidable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- 백그라운드 투명하게 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
