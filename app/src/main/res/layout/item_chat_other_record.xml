<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:background="@color/color_c8ced1">

    <!-- profile image -->
    <!--android:background="@drawable/wt_profile100_def_191022"-->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:adjustViewBounds="true"
        android:background="@drawable/wt_profile156_def_191126" />
    <!--android:scaleType="centerCrop"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_222222"
            android:textSize="14dp"
            tools:text="홍길동" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_all_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/wt_chatbox02_191022"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="9dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/iv_record_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="55dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/tv_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="210dp"
                    android:textColor="@color/color_1e1e1e"
                    android:textSize="14dp"
                    android:visibility="visible"
                    tools:text="00:05" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:includeFontPadding="false"
                android:textColor="@color/color_64717c"
                android:textSize="11dp"
                tools:text="오전 09:10" />
            <!--android:textColor="@color/color_aaaaaa"-->

            <TextView
                android:id="@+id/tv_is_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="@color/color_248fc0"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>