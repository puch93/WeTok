<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:background="@color/color_c8ced1">

    <!-- profile image -->
    <!--android:background="@drawable/wt_profile100_def_191022"-->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:adjustViewBounds="true"
        android:background="@drawable/wt_profile156_def_191126" />
    <!--android:scaleType="centerCrop"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_222222"
            android:textSize="14dp"
            tools:text="홍길동" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_all_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/wt_chatbox02_191022"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/baseline_vertical_align_bottom_black_36dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="180dp"
                        android:textColor="@color/color_1e1e1e"
                        android:textSize="15dp"
                        tools:text="iuqefeiqifqwiepfuiqwefpoqwiufepqwueifwuqfpwifquiefpqufewufwpqef.jpg" />

                    <TextView
                        android:id="@+id/tv_file_expiration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="210dp"
                        android:textColor="@color/color_444444"
                        android:textSize="12dp"
                        tools:text="~2019.12.10까지" />

                    <TextView
                        android:id="@+id/tv_file_byte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="210dp"
                        android:textColor="@color/color_666666"
                        android:textSize="12dp"
                        android:visibility="visible"
                        tools:text="0 B" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:includeFontPadding="false"
                android:textColor="@color/color_64717c"
                android:textSize="11dp"
                tools:text="오전 09:10" />
            <!--android:textColor="@color/color_aaaaaa"-->

            <TextView
                android:id="@+id/tv_is_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="@color/color_248fc0"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>