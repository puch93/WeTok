<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <!--android:background="@color/color_white"-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingLeft="22dp"
            android:paddingRight="21dp"
            android:theme="@style/ToolbarTheme"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ToolbarTheme">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:includeFontPadding="false"
                android:text="@string/frag_all_service_title"
                android:textColor="@color/color_373737"
                android:textSize="19dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_tab_line360_191022" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <!-- profile image -->
                <!--android:background="@drawable/wt_profile60_def_191022"-->


                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/wt_profile180_def_191126"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/color_444444"
                        android:textSize="18dp"
                        tools:text="김가나" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textColor="@color/color_aaaaaa"
                        android:textSize="14dp"
                        tools:text="00000001" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wt_btn_deliver_191022" />

                <TextView
                    android:id="@+id/tv_profile_modify"
                    android:layout_width="93dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/wt_btn_editprofile80_191022"
                    android:gravity="center"
                    android:text="@string/frag_all_service_profile"
                    android:textColor="@color/color_666666"
                    android:textSize="13dp" />

            </LinearLayout>


            <!--android:background="@drawable/wt_wetokpaybox_191022"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wt_icon_wetokpay_191022" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="1,000,000"
                    android:textColor="@color/color_28a7e1"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/frag_all_service_currency"
                    android:textColor="@color/color_444444"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_charge"
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/wt_btn_charge_191022"
                    android:gravity="center"
                    android:text="@string/frag_all_service_charge"
                    android:textColor="@color/color_666666"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_remittance"
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/wt_btn_charge_191022"
                    android:gravity="center"
                    android:text="@string/frag_all_service_remittance"
                    android:textColor="@color/color_666666"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="14dp"
                android:paddingBottom="12dp">

                <!-- top -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_tv_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_tv_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu01"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_movie_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_movie_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu02"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_destiny_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_love_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu03"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_luck_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_btn_luck40_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu04"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>


                <!-- bottom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_exchange_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_exchange_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu05"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_job_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_job_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu06"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_estate_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_realestate_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu07"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shopping_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="47dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_shop_191022" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/frag_all_service_menu08"
                            android:textColor="@color/color_444444"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:scaleType="fitXY"
                android:src="@drawable/wt_banner_191022" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/frag_all_service_bottom"
                android:textColor="@color/color_444444"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</layout>