<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">


    <!-- profile image -->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@drawable/wt_profile156_def_191126"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_222222"
            android:textSize="13dp"
            tools:text="홍길동" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_send_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/tomyeng"/>

            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:includeFontPadding="false"
                android:textColor="@color/color_64717c"
                android:textSize="11dp"
                tools:text="오전 09:10" />

            <TextView
                android:id="@+id/tv_is_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="@color/color_248fc0"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>