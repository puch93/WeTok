<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- background image -->
            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_c8ced1"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#22000000" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- close button -->
                <FrameLayout
                    android:id="@+id/fl_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="23dp"
                    android:paddingLeft="23dp"
                    android:paddingTop="17dp"
                    android:paddingEnd="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wt_icon_close_wh_191022" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_profile_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- profile image -->
                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/wt_profile100_def_191022"
                        android:scaleType="centerCrop" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|bottom"
                            android:orientation="horizontal">

                            <!-- name -->
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:maxWidth="150dp"
                                android:singleLine="true"
                                android:text="홍길동"
                                android:textColor="@color/color_white"
                                android:textSize="17dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <!-- modify button -->
                            <ImageView
                                android:id="@+id/iv_other_modify"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:adjustViewBounds="true"
                                android:visibility="gone"
                                android:src="@drawable/wt_btn_editprofile30_191022"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tv_name"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- id -->
                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxWidth="150dp"
                            android:singleLine="true"
                            android:text="puch93"
                            android:textColor="@color/color_white"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- share button -->
                <FrameLayout
                    android:id="@+id/fl_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:paddingEnd="22dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wt_btn_deliver_191022" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:paddingBottom="21dp">

            <!-- profile modify -->
            <FrameLayout
                android:id="@+id/fl_charm_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="35dp"
                    android:background="@drawable/wt_btn_editprofile80_191022"
                    android:gravity="center"
                    android:text="@string/act_profile_other_charm"
                    android:textColor="@color/color_666666"
                    android:textSize="13dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="13dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <!-- menu 01 -->
                <LinearLayout
                    android:id="@+id/ll_chatting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wt_btn_chat60_191022" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/act_profile_other_menu01"
                        android:textColor="@color/color_666666"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2" />

                <!-- menu 02 -->
                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wt_btn_remittance60_191022" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/act_profile_other_menu02"
                        android:textColor="@color/color_666666"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2" />

                <!-- menu 03 -->
                <LinearLayout
                    android:id="@+id/ll_story"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wt_btn_story60_191022" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/act_profile_other_menu03"
                        android:textColor="@color/color_666666"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>