<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="51dp"
        android:paddingRight="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:background="@drawable/wt_popup_box_191022"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_popup_191022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/dlg_password_text"
                android:textColor="@color/color_666666"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="205dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/wt_btn180_191022"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/color_white"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</layout>