<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/color_28a7e1"
            android:paddingLeft="@dimen/toolbar_padding_left"
            android:paddingRight="@dimen/toolbar_padding_right"
            android:theme="@style/ToolbarTheme"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ToolbarTheme">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="@string/act_profile_title"
                android:textColor="@color/color_white"
                android:textSize="19dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wt_wallpapersat_def_191022"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- background image button -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="12dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wt_icon_camera_191022" />
                </FrameLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <!-- profile image -->
                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop" />

                        <!-- no profile image -->
                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_profile100_def_191022" />
                    </FrameLayout>

                    <!-- profile image button -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/wt_icon_camera_191022" />
                    </FrameLayout>
                </FrameLayout>


                <!-- name -->
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:text="김가나"
                    android:textColor="@color/color_444444"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <!-- id -->
                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:text="00000001"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="15dp" />

            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="26dp"
            android:background="@drawable/wt_line360_191022" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="18dp"
            android:paddingRight="22dp"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_name"
                android:textColor="@color/color_444444"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="김가나"
                android:textColor="@color/color_888888"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_arrow_191022" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_line360_191022" />

        <LinearLayout
            android:id="@+id/ll_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="18dp"
            android:paddingRight="22dp"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_birth"
                android:textColor="@color/color_444444"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="생년생년생년"
                android:textColor="@color/color_888888"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_arrow_191022" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_line360_191022" />

        <LinearLayout
            android:id="@+id/ll_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="18dp"
            android:paddingRight="22dp"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_introduce"
                android:textColor="@color/color_444444"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="상태메세지상태메세지"
                android:textColor="@color/color_888888"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_arrow_191022" />
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_line360_191022" />

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="18dp"
            android:paddingRight="22dp"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_number"
                android:textColor="@color/color_444444"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="+82 10-1234-5678"
                android:textColor="@color/color_888888"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_arrow_191022" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_line360_191022" />

        <LinearLayout
            android:id="@+id/ll_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="18dp"
            android:paddingRight="22dp"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_id"
                android:textColor="@color/color_444444"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="puch93"
                android:textColor="@color/color_888888"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_arrow_191022" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_line360_191022" />

        <LinearLayout
            android:id="@+id/ll_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="18dp"
            android:paddingRight="22dp"
            android:paddingBottom="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_profile_pw"
                android:textColor="@color/color_444444"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="00000000"
                android:textColor="@color/color_888888"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:adjustViewBounds="true"
                android:src="@drawable/wt_icon_arrow_191022" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/wt_line360_191022" />

    </LinearLayout>
</layout>